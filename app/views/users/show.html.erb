<ul class="posts">
    <h2> Your posts: </h2>
        <% @posts.each do |post| %>
            <% if post.author == current_user %>
                <%= link_to post.title, post %>
            <% end %>
        <% end %>
</ul>


<ul class="messages">
    <h2> Messages: </h2>
        <%= render "conversations/conversation", post: @post, conversation: @conversation %>
</ul>


