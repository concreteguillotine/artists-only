<div class="comment">
    <div class="author">
        <%= time_ago_in_words(comment.created_at) %> ago &mdash; <%= comment.author %>
    </div>
    <div class="text">
        <%= simple_format(comment.text) %>
    </div>
    <div class="actions">
        <% if current_user == ( comment.author || post.author ) %>
            <%= link_to "Delete Comment",
          post_comment_path(comment.post, comment),
          data: { turbo_method: :delete, turbo_confirm: "Delete this comment?" } %>
        <% end %>
    </div>
</div>